---
const { image, title } = Astro.props;
---

{image && (
  <section class="hero" aria-label="cover image">
    <div class="hero-media">
      <img
        src={image}
        alt={title}
        decoding="async"
        fetchpriority="high"
        sizes="100vw"
        width="1200"
        height="630"
      />
    </div>
  </section>
)}
